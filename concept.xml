<?xml version="1.0" encoding="utf-8" ?>

<data>
	
	<!-- GENERAL SETTINGS -->
	<settings>
		
		<!-- LAYOUT SETTINGS -->
		<layout>
			<width>1000</width>
			<height>509</height>
			<minWidth>600</minWidth>
			<minHeight>400</minHeight>
			<offsetX>0</offsetX>
			<offsetY>0</offsetY>
		</layout>
		
		<!-- MAIN MENU -->
		<mainMenu>
			<visible>true</visible>
			<alignX>center</alignX>
			<alignY>top</alignY>
			<btnSpacing>2</btnSpacing>
			<marginX>10</marginX>
		</mainMenu>
		
		<!-- MAIN MENU BUTTON -->
		<mainButton>
			<height>0</height>
			<corners tl="0" tr="0" bl="6" br="6" />
		</mainButton>
		
		<!-- SUB MENU -->
		<subMenu>
			<alignX>left</alignX>
			<spacingY>10</spacingY>
			<height>50</height>
			<btnSpacing>2</btnSpacing>
			<marginX>4</marginX>
			<corners tl="6" tr="6" bl="6" br="6" />
			<size>autoSize</size><!-- autoSize, sameAsMain, notBiggerThanMain, notSmallerThanMain or absolute size in pixels -->
		</subMenu>
		
		<!-- SUB MENU BUTTON -->
		<subButton>
			<height>40</height>
			<corners tl="4" tr="4" bl="4" br="4" />
		</subButton>
		
		<!-- TOOLBAR -->
		<toolBar>
			<visible>true</visible>
			<alignX>center</alignX>
			<alignY>bottom</alignY>
			<marginX>0</marginX>
			<marginY>15</marginY>
		</toolBar>
		
		<!-- FULLSCREEN BUTTON -->
		<fullScreenButton>
			<visible>false</visible>
			<offsetX>325</offsetX>
			<offsetY>-11.5</offsetY>
		</fullScreenButton>
		
		<!-- PLAY BUTTON -->
		<playButton>
			<visible>false</visible>
			<offsetX>0</offsetX>
			<offsetY>0</offsetY>
		</playButton>
		
		<!-- SCROLLBAR -->
		<scrollBar>
			<visible>true</visible>
			<alignX>center</alignX>
			<alignY>bottom</alignY>
			<marginX>0</marginX>
			<marginY>40</marginY>
			<size>268</size>
			<minScrollBtnSize>50</minScrollBtnSize>
			<autoScrollAfter>0.5</autoScrollAfter>
			<autoScrollDelay>0.05</autoScrollDelay>
			<circularScroll>true</circularScroll>
			<mouseWheelScroll>true</mouseWheelScroll>
		</scrollBar>
		
		<!-- AUTOPLAY -->
		<autoPlay>
			<delay>1.5</delay>
			<direction>forward</direction>
			<pauseOnMouseOver>true</pauseOnMouseOver>
			<resumeAfter>0.5</resumeAfter>
		</autoPlay>
		
		<!-- SOUNDS -->
		<sounds>
			<volume>0</volume>
			<mouseOver>assets/audio/ui/over.mp3</mouseOver>
			<click>assets/audio/ui/click.mp3</click>
			<thumb3DFlip>assets/audio/ui/flip.mp3</thumb3DFlip>
		</sounds>
		
		<!-- DETAILS BOX -->
		<detailsBox>
			<initWidth>500</initWidth>
			<initHeight>200</initHeight>
			<topBtnsCorners tl="2" tr="2" bl="0" br="0" />
			<topBtnsHeight>12</topBtnsHeight>
			<topBtnsSpacingX>2</topBtnsSpacingX>
			<navBtnsCorners tl="0" tr="6" bl="0" br="6" />
			<purchaseBtn><![CDATA[Lien]]></purchaseBtn>
			<downloadBtn><![CDATA[Download Sample]]></downloadBtn>
			<closeBtn><![CDATA[<b>x</b>]]></closeBtn>
			<imageZoomPan>true</imageZoomPan>
			<maxDescrHeight>50</maxDescrHeight>
			<padding>3</padding>
			<spacingY>3</spacingY>
			<margin>-10</margin>
		</detailsBox>
		
	</settings>
	
	<!-- GLOBAL STYLE SHEET -->
	<styleSheet>
		<![CDATA[
			.blu { font-size: 11; color: #00CCFF; font-weight: bold; }
			.sml { font-size: 10; color: #A1A1A1; }
		]]>
	</styleSheet>
	
	<!-- TOOLTIPS -->
	<toolTips>
		
		<!-- SCROLLBAR TOOLTIPS -->
		<scrollBar>
			<arrowBtn1 mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Move Left]]></arrowBtn1>
			<scrollTrack mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Drag to Move]]></scrollTrack>
			<arrowBtn2 mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Move Right]]></arrowBtn2>
		</scrollBar>
		
		<!-- TOOLBAR TOOLTIPS -->
		<toolBar>
			<playBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Start Auto Play]]></playBtn>
			<pauseBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Stop Auto Play]]></pauseBtn>
			<fullScreenBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Go Full Screen]]></fullScreenBtn>
			<normalScreenBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Exit Full Screen]]></normalScreenBtn>
		</toolBar>
		
		<!-- OTHER TOOLTIPS CONFIGURATION -->
		<configOnly>
			<thumbnail mouseFollow="true" offsetY="30" offsetX="5" position="bellow" showDelay="0.2" stayFor="5"/>
		</configOnly>
		
		<!-- DETAILS BOX TOOLTIPS  -->
		<detailsBox>
			<nextBtn mouseFollow="true" offsetY="30" offsetX="5" position="bellow" showDelay="0.4" stayFor="5"><![CDATA[<span class="blu">Suivant:</span> %TITLE%]]></nextBtn>
			<prevBtn mouseFollow="true" offsetY="30" offsetX="5" position="bellow" showDelay="0.4" stayFor="5"><![CDATA[<span class="blu">Précédent:</span><br/>%TITLE%]]></prevBtn>
			<zoomIn mouseFollow="true" offsetY="22" offsetX="10" position="bellow" showDelay="0.1" stayFor="2"><![CDATA[Double clic pour zoomer]]></zoomIn>
			<zoomOut mouseFollow="true" offsetY="22" offsetX="10" position="bellow" showDelay="0.1" stayFor="2"><![CDATA[Double clic pour dézoomer]]></zoomOut>
		</detailsBox>
		
		<playbackControls>
			<playBtn mouseFollow="false" offsetY="6" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Play]]></playBtn>
			<pauseBtn mouseFollow="false" offsetY="6" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Pause]]></pauseBtn>
			<replayBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Replay]]></replayBtn>
			<fullScreenBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Plein écran]]></fullScreenBtn>
			<normalScreenBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Quitter plein écran]]></normalScreenBtn>
			<albumartBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Albumart]]></albumartBtn>
			<oscilloscopeBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Oscilloscope]]></oscilloscopeBtn>
			<spectrumBtn mouseFollow="false" offsetY="10" offsetX="0" position="above" showDelay="0.4" stayFor="5"><![CDATA[Spectrum]]></spectrumBtn>
		</playbackControls>
		
	</toolTips>
	
	<!-- CONTENT -->
	<content>
		
		<!-- CATEGORY -->
		<category selected="true">
			<title><![CDATA[Web Portfolio]]></title>
			<content>
				
				<subCategory selected="true">
					<title><![CDATA[Concept Art]]></title>
					<content>xml/conceptImage.xml</content>
				</subCategory>
				
				
				
			</content>
		</category>
		
		
	</content>
	
</data>
